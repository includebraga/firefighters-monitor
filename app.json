{
  "name": "firefighters-monitor",
  "scripts": {
    "postdeploy": "node src/seed.js"
  },
  "env": {
    "BASIC_AUTH_PASSWORD": {
      "required": true
    },
    "BASIC_AUTH_USERNAME": {
      "required": true
    },
    "JWT_SIGN_KEY": {
      "generator": "secret"
    },
    "NODE_ENV": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": ["mongolab"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
